client
dev tun
proto udp

remote admin.alkivi.fr 1194
resolv-retry infinite

nobind
user nobody
group nogroup

persist-key
persist-tun

ca /var/lib/puppet/ssl/certs/ca.pem
cert /var/lib/puppet/ssl/certs/<%= @alkiviName %>.pem
key /var/lib/puppet/ssl/private_keys/<%= @alkiviName %>.pem

tls-auth ta.key 1

comp-lzo
verb 3

